{
  "biome": {
    "indentStyle": "space",
    "lineWidth": 100,
    "trailingCommas": "none",
    "arrowParentheses": "asNeeded"
  },
  "malva": {
    "printWidth": 100,
    "useTabs": false,
    "indentWidth": 2,
    "declarationOrder": "smacss"
  },
  "excludes": ["**/*-lock.json", "**/node_modules", "**/.next"],
  "plugins": [
    "https://plugins.dprint.dev/biome-0.9.2.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.14.1.wasm"
  ]
}
